<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" verbose="10" parallel="none" preserve-order="true">
	<groups>
		<run>
			<include name="Master"/>
			<include name="Smoke"/>
		</run>
	</groups>

 <listeners>
	 <listener class-name="utilities.ListnerForReports"></listener>
 </listeners>	
	
  <test thread-count="10" name="Test" verbose="10" parallel="none" >
	  <parameter name="os" value="Windows"/>
      <parameter name="browser" value="chrome"/>
    
    <classes>
	
	<class name="testCases.TC002_VerifyHomePageTabs"/>
	<class name="testCases.TC003_VerifyFooterLinks"/>
	<class name="testCases.TC004_SearchItem"/>	
	<class name="testCases.TC005_FilterProductByPrice"/>	
	<class name="testCases.TC006_SortProductByPriceLowToHigh"/>	
	<class name="testCases.TC007_EmptySearchAlert"/>	
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
